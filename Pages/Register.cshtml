@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="w-80 bg-light row mt-2 p-5 rounded">
    <form method="post" class="bg-white p-3 border rounded">
        <h2>@ViewData["Title"]</h2>

        <div class="form-group my-2">
            <label asp-for="User.Username"></label>
            <input asp-for="User.Username" required class="form-control">
        </div>

        <div class="form-group my-2">
            <label asp-for="User.Password"></label>
            <input asp-for="User.Password" type="password" required class="form-control">
        </div>

        <div class="form-group my-2">
            <label>Confirm password</label>
            <input asp-for="ConfirmPassword" type="password" required class="form-control">
        </div>

        <div class="row mx-auto">
            <input type="submit" value="Submit" class="btn btn-primary btn-sm mt-2">
            <a href="/IssueBoard" class="btn btn-secondary btn-sm mt-2">Back</a>
        </div>
    </form>
</section>