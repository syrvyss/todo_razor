@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Backlog</h1>
<p>View all issues.</p>

<a href="/NewIssue" class="btn btn-primary mb-3">New Issue</a>
@foreach (Issue issue in Model.Issues)
{
    <a href="/EditIssue/@issue.Id" class="d-block card w-80 mb-2 px-1 bg-light text-decoration-none">
        <p class="p-2 m-0 text-dark">@issue.Name</p>
        <div class="d-flex">
            @switch (issue.Status)
            {
                case Models.Status.Todo:
                    <p class="text-white bg-success rounded m-1 mb-2 px-2">Todo</p>
                    break;
                case Models.Status.Doing:
                    <p class="text-white bg-warning rounded m-1 mb-2 px-2">Doing</p>
                    break;
                case Models.Status.Done:
                    <p class="text-white bg-danger rounded m-1 mb-2 px-2">Done</p>
                    break;
            }
            
            @switch (issue.Priority)
            {
                case Models.Priority.Low:
                    <p class="text-white bg-success rounded m-1 mb-2 px-2">Low</p>
                    break;
                case Models.Priority.Normal:
                    <p class="text-white bg-warning rounded m-1 mb-2 px-2">Normal</p>
                    break;
                case Models.Priority.High:
                    <p class="text-white bg-danger rounded m-1 mb-2 px-2">High</p>
                    break;
            }
        </div>
    </a>
}